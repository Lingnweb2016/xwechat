page{width:100%;min-height:100%;background-color:#0abcdf;background:linear-gradient(to top right, #18c9ff 0%, #1697ff 100%);}
.cont{width:100%;text-align:center;color:#fff;font-family:"微软雅黑";padding-top:90rpx;position:relative;}
.noDevice,.addDevice{width:600rpx;height:500rpx;background-color:#f5faff;border-radius:4px;font-size:32rpx;margin:0 auto;color:#00b0ff;padding-top:60rpx;margin-left:75rpx;}
.noDevice{margin-top:100rpx;}
.addDevice{position:absolute;z-index: 50;top:200rpx;box-shadow: #0d81bf 0px 0px 16px;}
.noDevice .tip{padding:120rpx 0 30rpx;}
.noDevice .btn{width:500rpx;height:110rpx;margin:30rpx auto;border-radius:55rpx;line-height:110rpx;border:1px solid #00b0ff;color:#00b0ff;background-color:rgba(255,255,255,0.1);}

.loginp{width:500rpx;height:110rpx;margin:30rpx auto;border-radius:55rpx;line-height:110rpx;color:#666;}
.loginp1{border:1px solid #00b0ff;font-family:"微软雅黑";padding-left:40rpx;width:460rpx;}
.loginp2{background-color:#00b0ff;color:#fff;}
.closecont{width:100%;height:70rpx;margin-top:100rpx;}
.closecont image {display: inline-block;width:70rpx;height:70rpx;text-align:right;line-height:70rpx;}

.listLine{font-size:34rpx;}
.listCont{width:600rpx;margin:30rpx auto 60rpx;border-top:2rpx solid #76cdff;max-height:700rpx;overflow-y:auto;}
.nav_section_items{display:flex;flex-direction: row;justify-content: space-between;padding:20rpx;border-bottom:2rpx solid #76cdff;}
.noborder{border:0;}
.noborder .nav_section_items .section_cont{font-size:30rpx;width:600rpx;overflow:hidden;text-overflow: ellipsis;white-space:nowrap;display: block;}
.nav_section_items:active{background:rgba(255,255,255,0.1);}
.nav_section_items .section_cont{width:400rpx;font-size:26rpx;color:#fff;line-height:70rpx;}
.nav_section_items .section_cont .offlineColor{color:#76fff7;}
.nav_section_items .section_cont view{overflow:hidden;text-overflow: ellipsis;white-space:nowrap;display: block;}
.nav_section_items .section_book{font-size:26rpx;line-height: 70rpx;color:#fff;text-align: center;padding:0 40rpx;}
.actcolor{color:#cfedff;}

.listBtn{width:600rpx;height:90rpx;line-height:90rpx;margin:20rpx auto 0;border-radius:6rpx;border:1px solid #cfedff;color:#fff;font-size:30rpx;}
.listBtn:active{background-color:rgba(255,255,255,0.1);}

.nav_section_items .section_cont .loadcont{display:inline-block;width:40rpx;height:40rpx;margin:0 0 0 10rpx;}
.nav_section_items .section_cont .onlinecont{display:inline-block;}
.nav_section_items .section_cont .loadcont image{width:100%;height:100%;}

