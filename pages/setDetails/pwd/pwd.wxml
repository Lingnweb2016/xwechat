<view class="body">
    <view class="choose">
        <form>
            <view class="cont">
                <view class="Grid2">
                <view class="Grid-cell2">原密码</view>
                    <view class="Grid-cell2">
                        <input class="inp" type="password" bindinput="oldInp" value="{{oldpwd}}" placeholder="请输入原密码" placeholder-class="inpplacehold"/>
                    </view> 
                    <view class="Grid-cell2"></view>
                </view>
                <view class="Grid2">
                <view class="Grid-cell2">新密码</view>
                    <view class="Grid-cell2">
                        <input class="inp" type="password" bindinput="newInp" value="{{newpwd}}" placeholder="请输入新密码" placeholder-class="inpplacehold"/>
                    </view> 
                    <view class="Grid-cell2"></view>
                </view>
                <view class="Grid2">
                <view class="Grid-cell2">确认密码</view>
                    <view class="Grid-cell2">
                        <input class="inp" type="password" bindinput="reInp" value="{{renewpwd}}" placeholder="请输入确认密码" placeholder-class="inpplacehold"/>
                    </view> 
                    <view class="Grid-cell2"></view>
                </view>
            </view>
            <view>
                <button class="btn" form-type="submit" bindtap="savePwdChange">保 存</button>
            </view>
        </form>            
    </view>
</view>
