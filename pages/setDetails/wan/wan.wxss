/* pages/setDetails/wan/wan.wxss */
.body{height:100%;min-height:1250rpx;background-color:#f5f5f5;font-family: "微软雅黑";color:#666;font-size:28rpx;}

.cont2{margin:0 auto 30rpx;}
.cont{font-size:26rpx;color:#999;}
.Grid-cell2:nth-child(2){color:#999;}
.Grid{display:flex;height:100rpx;background-color:#fff;line-height:100rpx;border-top:1px solid #eee;}
.Grid-cell:nth-child(1){flex:5;color:#333;text-overflow:ellipsis;padding-left:20rpx;}
.Grid-cell:nth-child(2){flex:1;text-align:right;padding-right:30rpx;color:#999;}
.Grid .img-cont{width:60rpx;height:60rpx;padding-top:20rpx;flex:none;padding-left:20rpx;}
.Grid .img-cont image{width:100%;height:100%;}

.top{width:100%;height:200rpx;background-color:#0abcdf;text-align:center;color:#fff;font-family:"微软雅黑";padding-top:80rpx;
    background:linear-gradient(to bottom right, #0367f9 0%, #26bbc1 100%);
}
.topTitle{font-size:44rpx;margin-bottom:20rpx;}
.topText{font-size:30rpx;}
.choose{width:96%;margin:0 auto;}

.Grid2 .txtbold{font-weight:bold;color:#666;}
.Grid2 .msgStyle{color:#2573bf;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}