/* pages/connect/connect.wxss */
.tab{display:-webkit-flex;display:flex;height:80rpx;line-height:80rpx;font-size:30rpx;color:#999;margin-bottom:30rpx;background-color:#fff;padding-bottom:20rpx;position:fixed;width:100%;font-family:"微软雅黑";}
.tab view{flex:1;text-align:center;margin:0 50rpx;}
.cont{padding-top:100rpx;font-family:"微软雅黑";font-size:26rpx;margin:0;}
.current{border-bottom:2px solid #666;color:#666;}
#devices{min-height:1030rpx;background-color:#f5f5f5;}
#disabled{height:2000rpx;background-color:#ffee55;}
#limit{height:2000rpx;background-color:#ff4411;}

/* 导航对应内容项 */
.nav_section{width:100%;background-color:#fff;border-top:1px solid #ddd;}
.section_limit{line-height:110rpx;}
.nav_section_items{display:flex;flex-direction: row;justify-content: space-between;padding:30rpx;border-bottom:2rpx solid #ddd;position: relative;}
.nav_section_items:active{background:#ddd;}
.nav_section_items .section_image{width:80rpx;height:80rpx;}
.nav_section_items .section_image image{width:100%;height:100%;padding-top:25rpx;padding-left:30rpx;}
.nav_section_items .section_cont{width:400rpx;font-size:26rpx;color:#a9a9a9;}
.nav_section_items .section_cont view{overflow:hidden;text-overflow: ellipsis;white-space:nowrap;display: block;}
.nav_section_items .section_cont .section_cont_intro{white-space:normal;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;}
.nav_section_items .section_cont .section_cont_sub{font-size: 28rpx;line-height:50rpx;color:#000;margin-bottom:5rpx;}
.nav_section_items .section_cont .section_cont_price{font-size:28rpx;color:#666;}
.nav_section_items .section_book{width:80rpx;height:80rpx;font-size:26rpx;border-radius:100%;background:#0abcdf;line-height: 80rpx;color:#fff;text-align: center;margin-top:26rpx;}
.nav_section_items_offline{background-color:#f9f9f9;}
.nav_section_items .section_cont .offlinecolor{color:#a9a9a9;}
.nav_section_items .offlinebackground{background-color:#ccc;}


.top2{width:100%;background-color:#0abcdf;text-align:center;color:#fff;font-family:"微软雅黑";padding-top:80rpx;
    background:linear-gradient(to bottom right, #0367f9 0%, #26bbc1 100%);
}
.topTitle{font-size:44rpx;margin-bottom:20rpx;}
.topText{display:-webkit-flex;display:flex;height:120rpx;background-color:rgba(0,0,0,0.2);font-size:30rpx;}
.speed{width:49%;display:-webkit-flex;display:flex;font-size:26rpx;}
.num{min-width:140rpx;font-size:50rpx;line-height:120rpx;padding:0 20rpx 0 30rpx;}
.numright{height:72rpx;margin-top:24rpx;text-align:left;}
.ruleline{height:60rpx;margin-top:30rpx;border-right:1px solid #fff;}
.bigCircle{width:250rpx;height:225rpx;border-radius:175rpx;background-color:rgba(255,255,255,0.1);margin:0 auto 40rpx;padding-top:25rpx;}
.circle{width:200rpx;height:200rpx;border-radius:150rpx;background-color:rgba(255,255,255,0.2);margin:0 auto;font-size:30rpx;}
.total{font-size:64rpx;padding:20rpx 0 14rpx;}

.devices_tab{width:750rpx;background-color:#eee;padding:30rpx 0 0;flex-flow:row nowrap;justify-content:space-around;align-items:stretch;display:flex;}
.devices_tab text{display:inline-block;background-color:#fff;border-right:1px solid #eee;height:100rpx;line-height:100rpx;font-size:30rpx;color:#999;flex-grow:1;text-align:center;}
.devices_tab .dev_active{color:#0abcdf;}

.connect-cont{padding-top:80rpx;font-size:28rpx;color:#666;text-align:center;}

/*tab页限速设备*/
.ctnt1{font-size:32rpx;}
.ctnt1 .setSpeed-cont{padding-top:0;}
.ssbtn-cont{margin-top:30rpx;}
.borbom{border-bottom:1px solid #eee;}
