/* pages/apply/apply.wxss */
.tab{display:-webkit-flex;display:flex;height:80rpx;line-height:80rpx;font-size:30rpx;color:#999;margin-bottom:30rpx;background-color:#fff;padding-bottom:20rpx;position:fixed;width:100%;font-family:"微软雅黑";}
.tab view{flex:1;text-align:center;margin:0 90rpx;}
.cont{padding-top:100rpx;font-family:"微软雅黑";}
.current{border-bottom:2px solid #666;color:#666;}
#installed{min-height:1050rpx;background-color:#f5f5f5;}
#disabled{height:2000rpx;background-color:#ffee55;}
#limit{height:2000rpx;background-color:#ff4411;}

.appcont{display:-webkit-flex;display:flex;flex-wrap:wrap;border-top:1px solid #eee;}
.appitem{flex-wrap:wrap;width:33%;background-color:#fff;font-size:28rpx;text-align:center;border-right:1px solid #eee;border-bottom:1px solid #eee;}
.apptitle{padding:30rpx 0;font-size:26rpx;}
.apppic{width:80rpx;height:80rpx;text-align:center;margin:40rpx auto 0;}
.apppic .img{width:100%;height:100%;}
.appenter{padding:30rpx 0;color:#aaa;font-size:24rpx;}
.connect-cont{padding-top:80rpx;font-size:28rpx;color:#666;text-align:center;}