/**index.wxss**/
.body{min-height:1100rpx;background-color:#f5f5f5;height:100%;font-family: "微软雅黑";color:#666;font-size:26rpx;}
.cont{margin:30rpx auto;}
.Grid{display:flex;height:100rpx;background-color:#fff;line-height:100rpx;border-top:1px solid #eee;}
.Grid-cell:nth-child(1){flex:1;}
.Grid-cell:nth-child(2){flex:2;color:#333;text-overflow:ellipsis;}
.Grid-cell:nth-child(3){flex:4;text-align:right;padding-right:30rpx;color:#999;}
.Grid .img-cont{width:60rpx;height:60rpx;padding-top:20rpx;flex:none;padding-right:20rpx;}
.Grid .img-cont image{width:100%;height:100%;}
.Grid-cell-2:nth-child(1){flex:1;color:#333;text-overflow:ellipsis;padding-left:30rpx;}
.Grid-cell-2:nth-child(2){flex:1;text-align:right;padding-right:30rpx;color:#999;}

.top{width:100%;height:200rpx;background-color:#0abcdf;text-align:center;color:#fff;font-family:"微软雅黑";padding-top:80rpx;
    background:linear-gradient(to bottom right, #0367f9 0%, #26bbc1 100%);
}
.topTitle{font-size:38rpx;margin-bottom:20rpx;}
.topText{font-size:30rpx;}


